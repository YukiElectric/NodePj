<%- include("./layout/head",{title: "Category"}) %>
<%- include("./layout/header") %>
<%- include("./layout/menu") %>
<%- include("./layout/slider") %>
                
                <!--	List Product	-->
                <div class="products">
                    <h3><%= category.title %> (hiện có <%= products.length %> sản phẩm)</h3>
                    <div class="product-list card-deck">
                        <% for(let item of products) {%>
                            <%- include("./components/product-item",{item}) %>
                        <% } %>
                    </div>
                </div>
                <!--	End List Product	-->
                
                <div id="pagination">
                    <ul class="pagination">
                        <% if(hasPrev) {%>
                            <li class="page-item"><a class="page-link" href="/category-<%= category.slug %>.<%= category._id %>?page=<%= prev %>">&laquo;</a></li>
                        <% } %>
                        <% for(let i of pages) {%>
                        <li class="page-item <%= i==page ? 'active' : '' %>">
                            <% if(i=="...") {%>
                            <span class="page-link"><%= i %></span>
                            <% }else {%>
                            <a class="page-link" href="/category-<%= category.slug %>.<%= category._id %>?page=<%= i %>"><%= i %></a>
                            <% } %>
                        </li>
                        <% } %>
                        <% if(hasNext) {%>
                        <li class="page-item"><a class="page-link" href="/category-<%= category.slug %>.<%= category._id %>?page=<%= next %>">&raquo;</a></li>
                        <% } %>
                    </ul> 
                </div>
            </div>
            
<%- include("./layout/slidebar") %>
<%- include("./layout/footer") %>
