<%- include("./layout/head",{title: "Product"}) %>
<%- include("./layout/header") %>
<%- include("./layout/menu") %>
<%- include("./layout/slider") %>
                
                <!--	List Product	-->
                <div id="product">
                	<div id="product-head" class="row">
                    	<div id="product-img" class="col-lg-6 col-md-6 col-sm-12">
                        	<img src="../images/<%= product.thumbnail %>">
                        </div>
                        <div id="product-details" class="col-lg-6 col-md-6 col-sm-12">
                        	<h1><%= product.name %></h1>
                            <ul>
                            	<li><span>Bảo hành:</span><%= product.warranty %></li>
                                <li><span>Đi kèm:</span><%= product.accessories %></li>
                                <li><span>Tình trạng:</span><%= product.status %></li>
                                <li><span>Khuyến Mại:</span><%= product.promotion %></li>
                                <li id="price">Giá Bán (chưa bao gồm VAT)</li>
                                <li id="price-number"><%= product.price %></li>
                                <% if(product.is_stock) {%>
                                <li id="status">Còn hàng</li>
                                <% }else{ %>
                                <li id="status" class="text-danger">Hết hàng</li>
                                <% } %>
                            </ul>
                            <div id="add-cart"><a href="#">Mua ngay</a></div>
                        </div>
                    </div>
                    <div id="product-body" class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <h3>Đánh giá về <%= product.name %></h3>
                            <p>
                                <%- product.description %>
                            </p>
                        </div>
                    </div>
                    
                    <!--	Comment	-->
                    <div id="comment" class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <h3>Bình luận sản phẩm</h3>
                            <form method="post">
                                <div class="form-group">
                                    <label>Tên:</label>
                                    <input name="full_name" required type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Email:</label>
                                    <input name="email" required type="email" class="form-control" id="pwd">
                                </div>
                                <div class="form-group">
                                    <label>Nội dung:</label>
                                    <textarea name="body" required rows="8" class="form-control"></textarea>     
                                </div>
                                <button type="submit" name="sbm" class="btn btn-primary">Gửi</button>
                            </form> 
                        </div>
                    </div>
                    <!--	End Comment	-->  
                    
                    <!--	Comments List	-->
                    <div id="comments-list" class="row">
                    	<div class="col-lg-12 col-md-12 col-sm-12">
                            <% for(let item of comments) {%>
                            <div class="comment-item">
                                <ul>
                                    <li><%= item.time %></li>
                                    <li><b><%= item.item.full_name %></b></li>
                                    <li>
                                        <p><%= item.item.body %></p>
                                    </li>
                                </ul>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <!--	End Comments List	-->
                </div>
                <!--	End Product	--> 
                <div id="pagination">
                    <ul class="pagination">
                        <% if(hasPrev) {%>
                            <li class="page-item"><a class="page-link" href="/product-<%= product.slug %>.<%= product._id %>?page=<%= prev %>">&laquo;</a></li>
                        <% } %>
                        <% for(let i of pages) {%>
                        <li class="page-item <%= i==page ? 'active' : '' %>">
                            <% if(i=="...") {%>
                            <span class="page-link"><%= i %></span>
                            <% }else {%>
                            <a class="page-link" href="/product-<%= product.slug %>.<%= product._id %>?page=<%= i %>"><%= i %></a>
                            <% } %>
                        </li>
                        <% } %>
                        <% if(hasNext) {%>
                        <li class="page-item"><a class="page-link" href="/product-<%= product.slug %>.<%= product._id %>?page=<%= next %>">&raquo;</a></li>
                        <% } %>
                    </ul>
                </div>               
            </div>
            
<%- include("./layout/slidebar") %>
<%- include("./layout/footer") %>
