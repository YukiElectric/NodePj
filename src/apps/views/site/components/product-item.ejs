<div class="product-item card text-center">
    <a href="/product-<%= item.slug %>.<%= item._id %>"><img src="../images/<%= item.thumbnail %>"></a>
    <h4><a href="/product-<%= item.slug %>.<%= item._id %>"><%= item.name %></a></h4>
    <p>Giá Bán: <span><%= (Math.ceil(eval(item.price) / 1000) * 1000).toLocaleString('vi-VN', {
        style: 'currency',
        currency: 'VND'
    }) %></span></p>
</div>